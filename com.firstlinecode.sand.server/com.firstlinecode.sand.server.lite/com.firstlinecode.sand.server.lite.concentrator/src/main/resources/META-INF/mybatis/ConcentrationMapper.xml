<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.firstlinecode.sand.server.lite.concentrator.ConcentrationMapper">
    <insert id="insert" parameterType="com.firstlinecode.sand.server.lite.concentrator.Concentration">
        INSERT INTO CONCENTRATION(id, concentrator, node, lan_id, communication_net, address, confirmation_time) VALUES(#{id}, #{concentrator}, #{node}, #{lanId}, #{communicationNet}, #{address}, #{confirmationTime})
    </insert>
    
	<select id="selectCountByConcentratorAndNode" resultType="int">
		SELECT COUNT(*) FROM CONCENTRATION WHERE concentrator = #{0} AND node = #{1}
	</select>
	
	<select id="selectByConcentratorAndNode" resultMap="concentrationResultMap">
		SELECT * FROM CONCENTRATION WHERE concentrator = #{0} AND node = #{1}
	</select>
	
	<resultMap id="concentrationResultMap" type="Concentration">
		<result property="id" column="id"/>
		<result property="concentrator" column="concentrator"/>
		<result property="node" column="node"/>
		<result property="lanId" column="lan_id"/>
		<result property="communcationNet" column="communcation_net"/>
		<result property="address" column="address"/>
		<result property="comfirmationTime" column="comfirmation_time"/>
	</resultMap>
</mapper>
